<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_scenes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#37FFFFFF"
        />

    <Button
        android:id="@+id/aboutMeButtonButton"
        android:layout_width="187dp"
        android:layout_height="259dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/aboutMeButton"
        app:layout_constraintStart_toStartOf="@+id/aboutMeButton"
        app:layout_constraintTop_toTopOf="@+id/aboutMeButton"
        app:layout_constraintEnd_toEndOf="@id/aboutMeButton"/>

    <TextView
        android:id="@+id/homeHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/aboutMeButton"
        android:layout_width="187dp"
        android:layout_height="259dp"
        android:background="#32000000"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:shapeAppearanceOverlay="@style/RoundedSquare" />

    <ImageView
        android:id="@+id/aboutMeIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/aboutMeButton"
        app:layout_constraintEnd_toEndOf="@+id/aboutMeButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/aboutMeButton"
        app:layout_constraintTop_toTopOf="@+id/aboutMeButton"
        app:layout_constraintVertical_bias="0.3"
        android:src="@drawable/user"
        android:transitionName="aboutme_transition"/>


    <TextView
        android:id="@+id/aboutmeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About me"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/aboutMeButton"
        app:layout_constraintEnd_toEndOf="@+id/aboutMeButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/aboutMeButton"
        app:layout_constraintTop_toBottomOf="@+id/aboutMeIcon" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/skillsButton"
        android:layout_width="187dp"
        android:layout_height="259dp"
        android:background="#32000000"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:shapeAppearanceOverlay="@style/RoundedSquare" />

    <Button
        android:id="@+id/skillsButtonButton"
        android:layout_width="187dp"
        android:layout_height="259dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/skillsButton"
        app:layout_constraintStart_toStartOf="@+id/skillsButton"
        app:layout_constraintTop_toTopOf="@+id/skillsButton"
        app:layout_constraintEnd_toEndOf="@id/skillsButton"/>

    <ImageView
        android:id="@+id/skillsIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/skillsButton"
        app:layout_constraintEnd_toEndOf="@+id/skillsButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/skillsButton"
        app:layout_constraintTop_toTopOf="@+id/skillsButton"
        app:layout_constraintVertical_bias="0.3"
        android:src="@drawable/skills"/>

    <TextView
        android:id="@+id/skillsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Werkervaring"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/skillsButton"
        app:layout_constraintEnd_toEndOf="@+id/skillsButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/skillsButton"
        app:layout_constraintTop_toBottomOf="@+id/skillsIcon" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/experienceButton"
        android:layout_width="187dp"
        android:layout_height="259dp"
        android:background="#32000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="0.3"
        app:shapeAppearanceOverlay="@style/RoundedSquare" />

    <Button
        android:id="@+id/experienceButtonButton"
        android:layout_width="187dp"
        android:layout_height="259dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/experienceButton"
        app:layout_constraintStart_toStartOf="@+id/experienceButton"
        app:layout_constraintTop_toTopOf="@+id/experienceButton"
        app:layout_constraintEnd_toEndOf="@id/experienceButton"/>

    <ImageView
        android:id="@+id/experienceIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/goal"
        app:layout_constraintBottom_toBottomOf="@+id/experienceButton"
        app:layout_constraintEnd_toEndOf="@+id/experienceButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/experienceButton"
        app:layout_constraintTop_toTopOf="@+id/experienceButton"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/expText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experience"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/experienceButton"
        app:layout_constraintEnd_toEndOf="@+id/experienceButton"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="@+id/experienceButton"
        app:layout_constraintTop_toBottomOf="@+id/experienceIcon"
        app:layout_constraintVertical_bias="0.494" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/contactButton"
        android:layout_width="187dp"
        android:layout_height="259dp"
        android:background="#32000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="0.301"
        app:shapeAppearanceOverlay="@style/RoundedSquare" />

    <Button
        android:id="@+id/contactButtonButton"
        android:layout_width="187dp"
        android:layout_height="259dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/contactButton"
        app:layout_constraintStart_toStartOf="@+id/contactButton"
        app:layout_constraintTop_toTopOf="@+id/contactButton"
        app:layout_constraintEnd_toEndOf="@id/contactButton"/>

    <ImageView
        android:id="@+id/contactIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/contacticon"
        app:layout_constraintBottom_toBottomOf="@+id/contactButton"
        app:layout_constraintEnd_toEndOf="@+id/contactButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/contactButton"
        app:layout_constraintTop_toTopOf="@+id/contactButton"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/ContactText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/contactButton"
        app:layout_constraintEnd_toEndOf="@+id/contactButton"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/contactButton"
        app:layout_constraintTop_toBottomOf="@+id/contactIcon"
        app:layout_constraintVertical_bias="0.494" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".50" />

</androidx.constraintlayout.widget.ConstraintLayout>