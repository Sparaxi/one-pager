<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4EBEEF1">

    <ImageButton
            android:id="@+id/aboutMe"
        android:layout_width="180dp"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button"
        android:src="@drawable/aboutme"
        android:scaleType="fitCenter"
        android:onClick="aboutMeButton"
        android:contentDescription="TODO" />

    <ImageButton
        android:id="@+id/myWork"
        android:layout_width="180dp"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerInside"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bottom_right"

        android:onClick="myWorkButton"
         />

    <ImageButton
        android:id="@+id/skills"
        android:layout_width="180dp"
        android:layout_height="350dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/custom_button"
        android:scaleType="fitCenter"
        android:onClick="skillsButton"
        android:src="@drawable/skills" />

    <ImageButton
        android:id="@+id/contact"
        android:layout_width="180dp"
        android:layout_height="350dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button"
        android:scaleType="fitCenter"
        android:onClick="contactButton"
        android:src="@drawable/contactinfo" />

</RelativeLayout>
