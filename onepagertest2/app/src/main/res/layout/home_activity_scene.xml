<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4EBEEF1">

    <ImageButton
        android:id="@+id/aboutMe"
        android:layout_width="180dp"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/overmij_image"
        android:onClick="aboutMeButton"/>

    <ImageButton

        android:id="@+id/myWork"
        android:layout_width="180dp"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="myWorkButton"
        android:src="@drawable/mijnwerk_image" />

    <ImageButton
        android:id="@+id/skills"
        android:layout_width="180dp"
        android:layout_height="350dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/skills_image"
         />

    <ImageButton
        android:id="@+id/contact"
        android:layout_width="180dp"
        android:layout_height="350dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/contact_image"
        android:onClick="contactButton"/>

</RelativeLayout>
